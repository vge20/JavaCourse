<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-hotels-table" author="Gleb">
        <createTable tableName="hotels">
            <column name="id" type="serial" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="location" type="varchar(35)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-users-table" author="Gleb">
        <createTable tableName="users">
            <column name="id" type="serial" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="is_admin" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="login" type="varchar(35)">
                <constraints nullable="false"/>
            </column>
            <column name="passw" type="varchar(35)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-rooms-table" author="Gleb">
        <createTable tableName="rooms">
            <column name="id" type="serial" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="hotel_id" type="int">
                <constraints foreignKeyName="hotel_id" references="hotels(id)"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="create-reservations-table" author="Gleb">
        <createTable tableName="reservations">
            <column name="id" type="serial" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="room_id" type="int">
                <constraints foreignKeyName="room_id" references="rooms(id)"/>
            </column>
            <column name="user_id" type="int">
                <constraints foreignKeyName="user_id" references="users(id)"/>
            </column>
            <column name="start_date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="date">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="fill-hotels-table" author="Gleb">
        <insert tableName="hotels">
            <column name="id" value="1"/>
            <column name="location" value="Moscow"/>
        </insert>
        <insert tableName="hotels">
            <column name="id" value="2"/>
            <column name="location" value="Saint-Petersburg"/>
        </insert>
    </changeSet>
    
    <changeSet id="fill-users-table" author="Gleb">
        <insert tableName="users">
            <column name="id" value="1"/>
            <column name="is_admin" value="false"/>
            <column name="login" value="qwerty"/>
            <column name="passw" value="ytrewq"/>
        </insert>
        <insert tableName="users">
            <column name="id" value="2"/>
            <column name="is_admin" value="false"/>
            <column name="login" value="asdfgh"/>
            <column name="passw" value="hgfdsa"/>
        </insert>
        <insert tableName="users">
            <column name="id" value="3"/>
            <column name="is_admin" value="true"/>
            <column name="login" value="zxcvbn"/>
            <column name="passw" value="nbvcxz"/>
        </insert>
    </changeSet>
    
    <changeSet id="fill-rooms-table" author="Gleb">
        <insert tableName="rooms">
            <column name="id" value="1"/>
            <column name="hotel_id" value="1"/>
        </insert>
        <insert tableName="rooms">
            <column name="id" value="2"/>
            <column name="hotel_id" value="1"/>
        </insert>
        <insert tableName="rooms">
            <column name="id" value="3"/>
            <column name="hotel_id" value="2"/>
        </insert>
        <insert tableName="rooms">
            <column name="id" value="4"/>
            <column name="hotel_id" value="2"/>
        </insert>
    </changeSet>
    
    <changeSet id="fill-reservations-table" author="Gleb">
        <insert tableName="reservations">
            <column name="id" value="1"/>
            <column name="room_id" value="1"/>
            <column name="user_id" value="1"/>
            <column name="start_date" value="2023-10-01"/>
            <column name="end_date" value="2023-10-03"/>
        </insert>
        <insert tableName="reservations">
            <column name="id" value="2"/>
            <column name="room_id" value="2"/>
            <column name="user_id" value="2"/>
            <column name="start_date" value="2023-10-02"/>
            <column name="end_date" value="2023-10-05"/>
        </insert>
    </changeSet>

</databaseChangeLog>